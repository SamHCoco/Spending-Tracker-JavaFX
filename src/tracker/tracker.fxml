<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<GridPane alignment="TOP_CENTER" gridLinesVisible="false" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.121"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="tracker.Controller"
          style="-fx-background-color: DodgerBlue">

        <columnConstraints>
            <ColumnConstraints percentWidth="15" />
            <ColumnConstraints percentWidth="20" />
            <ColumnConstraints percentWidth="15" />
            <ColumnConstraints percentWidth="25" />
            <ColumnConstraints percentWidth="25" />
        </columnConstraints>

        <rowConstraints>
            <RowConstraints percentHeight="15" />
            <RowConstraints percentHeight="10" />
            <RowConstraints percentHeight="7.5" />
            <RowConstraints percentHeight="7.5" />
            <RowConstraints percentHeight="60" />
        </rowConstraints>

        <Label fx:id="dateDisplay" style="-fx-font-size: 40px; -fx-text-fill:white;"
               GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.valignment="TOP" />

        <Label style="-fx-font-size:35px; -fx-text-fill:white;" text="Spent: £"
               GridPane.rowIndex="1"  GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.valignment="TOP" />

        <Label style="-fx-font-size: 40px; -fx-text-fill:white;  -fx-border-color: white;" text="SPENDING SUMMARY"
               GridPane.columnIndex="3" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0"
               GridPane.valignment="BOTTOM" />

        <Label style="-fx-font-size: 25px; -fx-text-fill:white" text="WEEK TOTAL:" GridPane.rowIndex="1"
               GridPane.columnIndex="3" GridPane.halignment="CENTER"  GridPane.valignment="BOTTOM" />

        <Label style="-fx-font-size: 25px; -fx-text-fill:white" text="MONTH TOTAL:" GridPane.rowIndex="1"
               GridPane.columnIndex="4" GridPane.halignment="CENTER"  GridPane.valignment="BOTTOM" />

        <Label fx:id="weekTotal" style="-fx-font-size: 40px; -fx-text-fill:white; -fx-border-color: white;"
               text="£50.37" GridPane.rowIndex="2" GridPane.columnIndex="3" GridPane.halignment="CENTER"
               GridPane.rowSpan="2" GridPane.valignment="TOP" />

        <Label fx:id="monthTotal" style="-fx-font-size: 40px; -fx-text-fill:white; -fx-border-color: white;"
               text="£130.37" GridPane.rowIndex="2" GridPane.columnIndex="4" GridPane.rowSpan="2"
               GridPane.halignment="CENTER" GridPane.valignment="TOP" />

        <TextField fx:id="userInput" style="-fx-font-size: 25px;" GridPane.columnIndex="1" GridPane.rowIndex="1"
               maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" />


        <Button fx:id="enterBtn" onAction="#onButtonClick" text="Enter" GridPane.columnIndex="2" GridPane.rowIndex="1"
                style="-fx-font-size: 16px;" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"/>
        <Button fx:id="foodBtn"  onAction="#onButtonClick" text="FOOD" GridPane.columnIndex="0" GridPane.rowIndex="2"
                maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"/>
        <Button fx:id="leisureBtn" onAction="#onButtonClick" text="LEISURE" GridPane.columnIndex="1" GridPane.rowIndex="2"
                maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"/>
        <Button fx:id="transportBtn" onAction="#onButtonClick" text="TRANSPORT" GridPane.columnIndex="2" GridPane.rowIndex="2"
                maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"/>
        <Button fx:id="clothingBtn" onAction="#onButtonClick" text="CLOTHING" GridPane.columnIndex="0" GridPane.rowIndex="3"
                maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"/>
        <Button fx:id="housingBtn" onAction="#onButtonClick" text="HOUSING" GridPane.columnIndex="1" GridPane.rowIndex="3"
                maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"/>
        <Button fx:id="miscBtn" onAction="#onButtonClick" text="MISC." GridPane.columnIndex="2" GridPane.rowIndex="3"
                maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"/>

        <TableView fx:id="spendingTable" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4"
    style="-fx-table-cell-border-color: black; -fx-font-size: 23px; -fx-font-weight: bold;">
            <contextMenu >
                <ContextMenu fx:id="editTable" >
                    <items>
                        <MenuItem fx:id="editOption" text="Edit" onAction="#onMenuItemClick"/>
                        <MenuItem fx:id="deleteOption" text="Delete" onAction="#onMenuItemClick"/>
                    </items>
                </ContextMenu>
            </contextMenu>
            <columns>
                <TableColumn fx:id="dateColumn" prefWidth="96.00000762939453" text="DATE" />
                <TableColumn fx:id="amountColumn" prefWidth="107.00001525878906" text="AMOUNT" />
                <TableColumn fx:id="categoryColumn" prefWidth="116.0" text="CATEGORY" />
            </columns>
        </TableView>

       <PieChart fx:id="pieChart" style="-fx-fill: white; -fx-font-size: 17px; " GridPane.columnIndex="2"
                 GridPane.columnSpan="3" GridPane.halignment="RIGHT" GridPane.rowIndex="3" GridPane.rowSpan="2" />

</GridPane>
